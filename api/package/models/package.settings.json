{
  "kind": "collectionType",
  "collectionName": "packages",
  "info": {
    "name": "Package"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "packageImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "events": {
      "via": "package",
      "collection": "event"
    },
    "customer_reviews": {
      "via": "package",
      "collection": "customer-reviews"
    }
  }
}
